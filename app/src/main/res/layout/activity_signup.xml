<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_background"
    tools:context=".MainActivity">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            style="@style/edit_15"
            android:layout_marginTop="@dimen/_25sdp"
            android:drawableLeft="@drawable/person"
            android:inputType="textPersonName"
            android:id="@+id/signup_name"
            android:hint="Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <EditText
            style="@style/edit_15"
            android:layout_marginTop="@dimen/_18sdp"
            android:drawableLeft="@drawable/mail"
            android:inputType="textEmailAddress"
            android:id="@+id/signup_email"
            android:layout_below="@id/signup_name"
            android:hint="Email Id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <EditText
            style="@style/edit_15"
            android:maxLength="10"
            android:layout_marginTop="@dimen/_18sdp"
            android:drawableLeft="@drawable/mobile"
            android:inputType="phone"
            android:id="@+id/signup_phone"
            android:hint="Phone"
            android:layout_below="@id/signup_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <EditText
            style="@style/edit_15"
            android:layout_marginTop="@dimen/_18sdp"
            android:drawableLeft="@drawable/lock"
            android:inputType="textPassword"
            android:id="@+id/signup_password"
            android:hint="Password"
            android:layout_below="@id/signup_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <EditText
            style="@style/edit_15"
            android:layout_marginTop="@dimen/_18sdp"
            android:drawableLeft="@drawable/lock"
            android:inputType="textPassword"
            android:id="@+id/signup_confirmPassword"
            android:hint="Confirm Password"
            android:layout_below="@id/signup_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/signup_Gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/signup_confirmPassword"
            android:layout_marginLeft="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_18sdp"
            android:text="Gender"
            android:textColor="@color/white_trans"
            android:textSize="@dimen/_15sdp"
            />

        <RadioGroup
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:id="@+id/signup_gender"
            android:layout_below="@id/signup_Gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RadioButton
            android:text="Male"
            android:layout_weight="1"
            app:buttonTint="@color/white_trans"
            android:id="@+id/signup_male"
            android:textColor="@color/white_trans"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <RadioButton
            android:text="Female"
            android:layout_weight="1"
            android:id="@+id/signup_female"
            app:buttonTint="@color/white_trans"
            android:textColor="@color/white_trans"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        </RadioGroup>

        <TextView
            android:id="@+id/signup_select_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/signup_gender"
            android:layout_marginLeft="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_18sdp"
            android:text="Select City:"
            android:textColor="@color/white_trans"
            android:textSize="@dimen/_15sdp"
            />
        
        <Spinner
            android:id="@+id/signup_city"
            android:background="@drawable/custom_spinner"
            android:popupBackground="@drawable/custom_background"
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/signup_select_city"
            android:layout_marginHorizontal="@dimen/_18sdp"
            />

        <EditText
            style="@style/edit_15"
            android:layout_marginTop="@dimen/_25sdp"
            android:drawableLeft="@drawable/calender_icon"
            android:inputType="textPersonName"
            android:id="@+id/signup_dob"
            android:hint="Date of Birth"
            android:layout_below="@id/signup_city"
            android:editable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <Button
            android:textSize="@dimen/_15sdp"
            android:id="@+id/signup_signup"
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:text="Sign Up"
            app:backgroundTint="@null"
            android:background="@drawable/custom_button_white"
            android:textColor="#F47920"
            android:layout_below="@id/signup_dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <Button
            android:textSize="@dimen/_15sdp"
            android:id="@+id/signup_login"
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:text="Log In"
            android:layout_below="@+id/signup_signup"
            app:backgroundTint="@null"
            android:background="@drawable/custom_button_white"
            android:textColor="#F47920"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </RelativeLayout>

</ScrollView>