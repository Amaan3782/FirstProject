<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FirstProject" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">#FCC498</item>
        <item name="fontFamily">@font/josefin_sans_bold</item>
    </style>

    <style name="Theme.FirstProject" parent="Base.Theme.FirstProject" />

    <style name="edit_15" parent="Widget.AppCompat.EditText">
        <item name="android:paddingHorizontal">@dimen/_10sdp</item>
        <item name="android:paddingVertical">@dimen/_20sdp</item>
        <item name="android:textColorHint">@color/white_trans</item>
        <item name="android:background">@drawable/custom_border</item>
        <item name="android:drawablePadding">@dimen/_10sdp</item>
        <item name="android:layout_marginHorizontal">@dimen/_20sdp</item>
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>

    <style name="checkbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:layout_marginTop">@dimen/_18sdp</item>
        <item name="android:layout_marginLeft">@dimen/_20sdp</item>
        <item name="android:buttonTint">@color/white_trans</item>
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>

    <style name="radio_16" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:buttonTint">@color/white_trans</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textColor">@color/white_trans</item>
    </style>

    <style name="button_15_white" parent="Widget.AppCompat.EditText">

